{
  "name": "conversionapi",
  "version": "2.0.0",
  "description": "A collection of conversions and calculations packaged neatly in an API",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "nodemon app.js",
    "test": "jest",
    "lint": "eslint"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheMrAnderson/ConversionAPI.git"
  },
  "author": "TheMrAnderson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheMrAnderson/ConversionAPI/issues"
  },
  "homepage": "https://github.com/TheMrAnderson/ConversionAPI#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dependencies": "^0.0.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.21",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "babel-jest": "^28.1.3",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^27.5.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    }
  }
}
